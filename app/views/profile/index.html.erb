
<!DOCTYPE html>
<html lang="en">
  <title>Catbook</title>
  
    <%= stylesheet_link_tag 'style' %>
    <%= javascript_include_tag 'interface' %> 
    <%= csrf_meta_tags %>
<body>
  <header>
    <%= render 'layouts/navbar' %>
  </header>

  <main>

  <% if current_user  %> 
    <div class="container">
    <div class="row">
    <div class="col">
  <% if current_user.avatar.attached? %>
  <%= image_tag(current_user.avatar_profile) %>
  <% else %>
  <%= image_tag("default_image.jpg") %>
  <% end %>
     <%= form_with(model: @user, local: true) do |form| %>
    <% end %>
    </div>
    <div class="col">
        <h1>Profile Settings</h1>
        <p>First Name: <%= current_user.firstname %></p>
        <p>Last Name: <%= current_user.lastname %></p>
        <h3><%= link_to 'Click to edit Account', edit_user_registration_path %></h3>
        <% else %>
        <h1>Sign in to view this page.</h1>
        <% end %>
    </div>
  
    <main>

  </div>
  <div>
  <%
=begin%>
  
<%   only shows the posts by the current user
=end%>
      <% @user = current_user%>
      <% @posts = @user.posts %>

     <% @posts.each do |post| %>
        <%= post.message %> <br>
          <% if post.image.attached? %>
            <div class ='post__message-img'><%= image_tag(post.image) %></div>
        <%end%>
            </div>
     <% end %> 

